{
  "manifest_version": 3,
  "name": "Synapse Button (Inline)",
  "version": "0.1",
  "description": "Adds a floating Synapse brain button to any webpage.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
